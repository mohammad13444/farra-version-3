<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.farra"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>فرهَ</name>
    <description>Farra App - finds the place</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <!-- صفحه اولیه -->
    <content src="splash.html" />

    <!-- دسترسی‌ها -->
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>

    <!-- تنظیمات ظاهری -->
    <preference name="StatusBarBackgroundColor" value="#383838ff"/>
    <preference name="StatusBarStyle" value="default"/>
    <preference name="Fullscreen" value="true"/>
    <preference name="Orientation" value="portrait"/>

    <!-- نمایش/پنهان‌سازی اسپلش پیش‌فرض -->
    <preference name="ShowSplashScreen" value="false"/>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="SplashScreenDelay" value="0"/>

    <!-- ====================== ANDROID ====================== -->
    <platform name="android">

        <!-- آیکون‌ها -->
        <icon src="www/resources/48-48.jpg" density="mdpi"/>
        <icon src="www/resources/72-72.jpg" density="hdpi"/>
        <icon src="www/resources/96-96.jpg" density="xhdpi"/>
        <icon src="www/resources/144-144.jpg" density="xxhdpi"/>
        <icon src="www/resources/192-192.jpg" density="xxxhdpi"/>

        <!-- مجوزها -->
        <uses-permission android:name="android.permission.BLUETOOTH"/>
        <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
        <uses-permission android:name="android.permission.BLUETOOTH_CONNECT"/>
        <uses-permission android:name="android.permission.BLUETOOTH_SCAN"/>
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
        <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

        <!-- قابلیت سخت‌افزاری GPS -->
        <uses-feature android:name="android.hardware.location.gps"/>

        <!-- جلوگیری از تأثیر دارک‌مود (تنظیم در AndroidManifest.xml به‌صورت پایدار) -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application/@android:forceDarkAllowed">
            false
        </edit-config>

    </platform>

    <!-- ======================= iOS ======================== -->
    <platform name="ios">
        <!-- توضیحات مجوز بلوتوث -->
        <edit-config mode="merge" target="NSBluetoothAlwaysUsageDescription">
            <string>اپ برای کنترل چراغ نیاز به بلوتوث دارد.</string>
        </edit-config>
        <edit-config mode="merge" target="NSBluetoothPeripheralUsageDescription">
            <string>ارسال/دریافت وضعیت چراغ هوشمند</string>
        </edit-config>

        <!-- آیکون‌ها -->
        <icon src="www/resources/120-120.jpg" width="120" height="120"/>
        <icon src="www/resources/180-180.jpg" width="180" height="180"/>
        <icon src="www/resources/1024-1024.jpg" width="1024" height="1024"/>
    </platform>

</widget>
